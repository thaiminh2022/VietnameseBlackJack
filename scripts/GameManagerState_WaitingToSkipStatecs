using Godot;
using System;
using static Godot.Projection;

public partial class GameManagerState_SplitCard : GameManagerState
{
    public override void Start() {
        SplitCardToPlayers();
        gameManager.ChangeState(gameManager.PlayingState);
    }

    private void SplitCardToPlayers() {
        foreach (var player in gameManager.Players) {

            // Give each player 2 cards
            for (int _i = 0; _i < 2; _i++) {
                player.AddCard(gameManager.GetRandomFromGameDeck(), force: true);
            }
        }
    }
    
}
